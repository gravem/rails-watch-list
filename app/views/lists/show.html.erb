<div class="">
  <h1 class="text-center display-2"><%= @list.name %></h1>

  <div class="d-flex p-2 bd-highlight justify-content-evenly mb-3">
    <% @list.bookmarks.each do |bookmark| %>

    <div class="card mb-3" style="width: 18rem;">
      <%= image_tag bookmark.movie.poster_url %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{bookmark.movie.title} from your #{@list.name} list"}, class: 'btn btn-danger' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="d-flex p-2 bd-highlight justify-content-center mb-3">
  <%= link_to 'Add a movie to this list', new_list_bookmark_path(@list), class: 'btn btn-dark' %>
  <%= link_to 'Take me back', lists_path, class: 'btn btn-dark' %>
</div>
